<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomCheckboxBrand">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="HeaderTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#002340</item>
    </style>
    <style name="vignette_choice_title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">300</item>

        <item name="android:lineHeight">28sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#002340</item>
    </style>
    <style name="vignette_choice_price">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#002340</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="default_filled_button" parent="Widget.MaterialComponents.Button">
        <!-- Button text color -->
        <item name="android:textColor">#FFFFFF</item>
        <!-- Button text size -->
        <item name="android:textSize">16sp</item>
        <!-- Button text style (non-all caps) -->
        <item name="android:textAllCaps">false</item>
        <!-- Button corner radius -->
        <item name="cornerRadius">24dp</item>
        <!-- Button background color (background tint) -->
        <item name="android:backgroundTint">#002340</item>
        <!-- Remove button inset padding -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <!-- Set height of the button -->
        <item name="android:layout_height">48dp</item>
        <!-- Optional: Define width if you want it fixed -->
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="default_outlined_button" parent="Widget.MaterialComponents.Button">
        <!-- Button text color -->
        <item name="android:textColor">#002340</item>
        <!-- Button text size -->
        <item name="android:textSize">16sp</item>
        <!-- Button text style (non-all caps) -->
        <item name="android:textAllCaps">false</item>
        <!-- Button corner radius -->
        <item name="cornerRadius">24dp</item>
        <!-- Button stroke color -->
        <item name="strokeColor">#002340</item>
        <!-- Button stroke width -->
        <item name="strokeWidth">2dp</item>
        <!-- Button background tint -->
        <item name="android:backgroundTint">@color/white</item>
        <!-- Button height -->
        <item name="android:layout_height">48dp</item>
        <!-- Button width -->
        <item name="android:layout_width">match_parent</item>
        <!-- Optional: Remove top and bottom insets -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
</resources>